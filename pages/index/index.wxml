<!--index.wxml-->
<view class="container">
  <view class="usermotto">
    <text class="content">
      {{ pingjiaShow ? wordList[currentWordIndex].pingjia : '' }}{{ pianjiaShow ? wordList[currentWordIndex].pianjia : '' }}{{ spellShow ? wordList[currentWordIndex].spell : '' }}
    </text>
    <view>
      <image src="../../assets/images/speaker.png" class="play-btn-image" bindtap="playAudio" />
    </view>
  </view>
  <view>
    <view class="switch-ctn">
      <label class="switch-label">平假：</label>
      <switch bindchange="pingjiaChange" checked />
    </view>
    <view class="switch-ctn">
      <label class="switch-label">片假：</label>
      <switch bindchange="pianjiaChange" checked />
    </view>
    <view class="switch-ctn">
      <label class="switch-label">罗马：</label>
      <switch bindchange="spellChange" checked />
    </view>
  </view>
  <view class="switch-btn-ctn">
    <button bindtap="prevWord">prev</button>
    <button bindtap="nextWord">next</button>
  </view>
</view>
