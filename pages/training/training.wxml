<!--index.wxml-->
<view class="container">
  <tabs bind:onChange="onTabsChange" tabList="{{ tabList }}" activeIndex="{{ activeTab }}"></tabs>
  <view class="content">
    <text class="text">{{ 
        pingjiaShow ? wordList[currentWordIndex].pingjia : '' }}{{ pianjiaShow ? wordList[currentWordIndex].pianjia : '' }}{{ spellShow ? wordList[currentWordIndex].spell : ''
    }}</text>
  </view>
  <view class="options">
    <view class="radio-group-ctn">
      <view class="radio-group-item">
        <radio-group bindchange="changePlaySequenceMode" >
          <label wx:for="{{ playSequenceList }}" wx:for-item="item" wx:key="{{ item.id }}">
            <radio value="{{ item.value }}" checked="{{ item.value === wordPlaySequenceMode }}" /> {{ item.text }}
          </label>
        </radio-group>
      </view>
      <view class="radio-group-item">
        <radio-group bindchange="changeWordRangeMode" >
          <label wx:for="{{ wordRangeList }}" wx:for-item="item" wx:key="{{ item.id }}">
            <radio value="{{ item.value }}" checked="{{ item.value === wordRangeMode }}" /> {{ item.text }}
          </label>
        </radio-group>
      </view>
    </view>
    <view class="switch-ctn">
      <label class="switch-label">平假：</label>
      <switch bindchange="pingjiaChange" checked />
    </view>
    <view class="switch-ctn">
      <label class="switch-label">片假：</label>
      <switch bindchange="pianjiaChange" checked />
    </view>
    <view class="switch-ctn">
      <label class="switch-label">罗马：</label>
      <switch bindchange="spellChange" checked />
    </view>
  </view>
  <view>
    <slider bindchange="sliderChange" min="1" max="10" show-value/>
  </view>
  <view class="switch-btn-ctn">
    <button bindtap="startTraining">开始</button>
    <button bindtap="stopTraining">停止</button>
  </view>
</view>
